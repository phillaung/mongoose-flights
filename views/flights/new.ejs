<%- include('../partials/header.ejs') %>

<h3>Enter a New Flight</h3>
<form action="/flights" method="POST">
    <label>Airline:
        <select name="airline">
            <option value="American" selected>American</option>
            <option value="Delta">Delta</option>
            <option value="Southwest">Southwest</option>
            <option value="Spirit">Spirit</option>
            <option value="United">United</option>
        </select>
    </label>
    <label>Airport:
        <select name="airport">
            'AUS', 'DFW', 'DEN', 'JFK', 'LAX' , 'SAN', , 'SFO'
            <option value="AUS">AUS</option>
            <option value="DFW">DFW</option>
            <option value="DEN">DEN</option>
            <option value="JFK">JFK</option>
            <option value="LAX" selected>LAX</option>
            <option value="SAN">SAN</option>
            <option value="SFO">SFO</option>
        </select>
    </label>
    <label>Flight No:
        <input type="number" name="flightNo">
    </label>
    <label>Departs:
        <input type="datetime-local" name="departs">
    </label>
    <button type="submit">Add Flight</button>
</form>

<%- include('../partials/footer.ejs') %>